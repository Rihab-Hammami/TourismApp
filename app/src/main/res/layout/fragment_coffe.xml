<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragment.CoffeFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="25dp"
            app:cardCornerRadius="25dp"
            app:cardElevation="15dp">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/c1"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/delice"></ImageView>

                <TextView
                    android:id="@+id/txt_c1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="25dp"
                    android:layout_toRightOf="@+id/c1"
                    android:fontFamily="@font/alfa_slab_one"
                    android:text="Cafe Des Delices"
                    android:textSize="18dp">

                </TextView>






            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="25dp"
            app:cardCornerRadius="25dp"
            app:cardElevation="15dp">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/art"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/art"></ImageView>

                <TextView
                    android:id="@+id/txt_art"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="25dp"
                    android:layout_toRightOf="@+id/art"
                    android:layout_marginLeft="15dp"
                    android:textSize="18dp"
                    android:fontFamily="@font/alfa_slab_one"
                    android:text="Cafe Art">

                </TextView>



            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="25dp"
            app:cardCornerRadius="25dp"
            app:cardElevation="15dp">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/bleue"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/bleue"></ImageView>

                <TextView
                    android:id="@+id/txt_bleue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="25dp"
                    android:layout_toRightOf="@+id/bleue"
                    android:layout_marginLeft="15dp"
                    android:textSize="18dp"
                    android:fontFamily="@font/alfa_slab_one"
                    android:text="Café Bleue">

                </TextView>



            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="25dp"
            app:cardCornerRadius="25dp"
            app:cardElevation="15dp">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/natte"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/natte"></ImageView>

                <TextView
                    android:id="@+id/txt_natte"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="25dp"
                    android:layout_toRightOf="@+id/natte"
                    android:fontFamily="@font/alfa_slab_one"
                    android:gravity="center"
                    android:text="Café Des Nattes"
                    android:textSize="18dp">

                </TextView>


            </RelativeLayout>
        </androidx.cardview.widget.CardView>


    </LinearLayout>

</ScrollView>