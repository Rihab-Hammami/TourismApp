<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".homeActivity">

    <TextView
        android:id="@+id/find"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/amaranth"
        android:text="Find Your Destination"
        android:textSize="20dp"
        android:textStyle="bold"
        android:textColor="@color/black"
        >

    </TextView>
    <androidx.cardview.widget.CardView

        android:id="@+id/card"
        android:layout_below="@+id/find"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="15dp"
        app:cardCornerRadius="5dp"
        app:cardElevation="5dp">

        <SearchView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/search"
            android:layout_below="@+id/find"/>
    </androidx.cardview.widget.CardView>


    <TextView
        android:id="@+id/recommand"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/card"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/amaranth"
        android:text="Recommended Places"
        android:textSize="20dp"
        android:textStyle="bold"
        android:textColor="@color/black"></TextView>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rcv_places"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/recommand"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

    </androidx.recyclerview.widget.RecyclerView>

    <TextView
        android:id="@+id/otherplaces"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rcv_places"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/amaranth"
        android:text="Must Visit Places"
        android:textSize="20dp"
        android:textStyle="bold"
        android:textColor="@color/black"></TextView>

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/otherplaces">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            >



            <androidx.cardview.widget.CardView
                android:id="@+id/c_djerba"
                android:layout_width="165dp"
                android:layout_height="230dp"
                android:layout_margin="10dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="20dp"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_width="20mm"
                        android:layout_height="25mm"
                        android:src="@drawable/djerba1"
                        android:layout_marginTop="15dp"
                        android:layout_gravity="center"></ImageView>

                </LinearLayout>


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Djerba"
                    android:textColor="@color/black"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:layout_marginTop="200dp"

                    ></TextView>


            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/c_tozeur"
                android:layout_width="165dp"
                android:layout_height="230dp"
                android:layout_margin="10dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="20dp"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_width="20mm"
                        android:layout_height="25mm"
                        android:src="@drawable/tozeur"
                        android:layout_marginTop="15dp"
                        android:layout_gravity="center"></ImageView>

                </LinearLayout>


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Tozeur"
                    android:textColor="@color/black"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:layout_marginTop="200dp"

                    ></TextView>


            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/c_sousse"
                android:layout_width="165dp"
                android:layout_height="230dp"
                android:layout_margin="10dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="20dp"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_width="20mm"
                        android:layout_height="25mm"
                        android:src="@drawable/sousse"
                        android:layout_marginTop="15dp"
                        android:layout_gravity="center"></ImageView>

                </LinearLayout>


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Sousse"
                    android:textColor="@color/black"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:layout_marginTop="200dp"

                    ></TextView>


            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/c_monastir"
                android:layout_width="165dp"
                android:layout_height="230dp"
                android:layout_margin="10dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="20dp"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_width="20mm"
                        android:layout_height="25mm"
                        android:src="@drawable/monastir"
                        android:layout_marginTop="15dp"
                        android:layout_gravity="center"></ImageView>

                </LinearLayout>


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Monastir"
                    android:textColor="@color/black"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:layout_marginTop="200dp"

                    ></TextView>


            </androidx.cardview.widget.CardView>



        </LinearLayout>







    </HorizontalScrollView>








</RelativeLayout>