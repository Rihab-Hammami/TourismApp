<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragment.DjerbaHotelsFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="25dp"
            app:cardCornerRadius="25dp"
            app:cardElevation="15dp">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/H1"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/h1"></ImageView>

                <TextView
                    android:id="@+id/txt_h1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="25dp"
                    android:layout_toRightOf="@+id/H1"
                    android:fontFamily="@font/alfa_slab_one"
                    android:text="Hasdrubal Prestige Djerba"
                    android:textSize="18dp">

                </TextView>

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_below="@+id/txt_h1"
                    android:layout_marginLeft="15dp"
                    android:layout_toRightOf="@+id/H1"
                    android:src="@drawable/etoile"></ImageView>




            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="25dp"
            app:cardCornerRadius="25dp"
            app:cardElevation="15dp">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/h2"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/h2"></ImageView>

                <TextView
                    android:id="@+id/txt_h2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="25dp"
                    android:layout_toRightOf="@+id/h2"
                    android:layout_marginLeft="15dp"
                    android:textSize="18dp"
                    android:fontFamily="@font/alfa_slab_one"
                    android:text="TUI MAGIC LIFE Penelope Beach">

                </TextView>
                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/etoile"
                    android:layout_below="@+id/txt_h2"
                    android:layout_toRightOf="@+id/h2"
                    android:layout_marginLeft="15dp"></ImageView>


            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="25dp"
            app:cardCornerRadius="25dp"
            app:cardElevation="15dp">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/h3"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/h3"></ImageView>

                <TextView
                    android:id="@+id/txt_h3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="25dp"
                    android:layout_toRightOf="@+id/h3"
                    android:layout_marginLeft="15dp"
                    android:textSize="18dp"
                    android:fontFamily="@font/alfa_slab_one"
                    android:text="Djerba Authentique">

                </TextView>
                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/etoile"
                    android:layout_below="@+id/txt_h3"
                    android:layout_toRightOf="@+id/h3"
                    android:layout_marginLeft="15dp"></ImageView>


            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="25dp"
            app:cardCornerRadius="25dp"
            app:cardElevation="15dp">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/h4"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/h4"
                    android:layout_marginTop="10dp"></ImageView>

                <TextView
                    android:id="@+id/txt_h4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="25dp"
                    android:layout_toRightOf="@+id/h4"
                    android:layout_marginLeft="15dp"
                    android:textSize="18dp"
                    android:fontFamily="@font/alfa_slab_one"
                    android:text="Radisson Blu Palace Resort-Thalasso">

                </TextView>
                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/etoile"
                    android:layout_below="@+id/txt_h4"
                    android:layout_toRightOf="@+id/h4"
                    android:layout_marginLeft="15dp"></ImageView>


            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="25dp"
            app:cardCornerRadius="25dp"
            app:cardElevation="15dp">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/h5"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/h5"></ImageView>

                <TextView
                    android:id="@+id/txt_h5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="25dp"
                    android:layout_toRightOf="@+id/h5"
                    android:layout_marginLeft="15dp"
                    android:textSize="18dp"
                    android:fontFamily="@font/alfa_slab_one"
                    android:text="Palm Beach Palace">

                </TextView>

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_below="@+id/h5"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="-50dp"
                    android:layout_toRightOf="@+id/h5"
                    android:src="@drawable/etoile"></ImageView>


            </RelativeLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>

</ScrollView>